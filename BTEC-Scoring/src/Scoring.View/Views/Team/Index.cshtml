@model IEnumerable<Scoring.ApplicationShared.DTOs.TeamDto>

@{
    ViewData["Title"] = "Index";
}

<h1>All Teams</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembersCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletedEventsCount)
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembersCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedEventsCount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning col-md-12" }) 
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success col-md-12" }) 

            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger col-md-12" })
            </td>
        </tr>
}
    </tbody>
</table>
