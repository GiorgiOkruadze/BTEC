@model Scoring.ApplicationShared.DTOs.TeamDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Team</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 p-l-0">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <fieldset class="student-container">
                @for (int i = 0; i < Model.Students.Count; i++)
                {
                <div class="student d-flex justify-content-between align-items-end">
                    <div class="form-group col-md-3 p-l-0 d-none">
                        <label asp-for="@Model.Students[i].Id" class="control-label"></label>
                        <input asp-for="@Model.Students[i].Id" class="form-control" placeholder="Enter here" />
                    </div>
                    <div class="form-group col-md-3 p-l-0 d-none">
                        <label asp-for="@Model.Students[i].TeamId" class="control-label"></label>
                        <input asp-for="@Model.Students[i].TeamId" class="form-control" placeholder="Enter here" />
                    </div>
                    <div class="form-group col-md-3 p-l-0">
                        <label asp-for="@Model.Students[i].Name" class="control-label"></label>
                        <input asp-for="@Model.Students[i].Name" class="form-control" placeholder="Enter here" />
                    </div>
                    <div class="form-group col-md-3 p-l-0">
                        <label asp-for="@Model.Students[i].Surname" class="control-label"></label>
                        <input asp-for="@Model.Students[i].Surname" class="form-control" placeholder="Enter here" />
                    </div>
                    <div class="form-group col-md-3 p-l-0">
                        <label asp-for="@Model.Students[i].Email" class="control-label"></label>
                        <input asp-for="@Model.Students[i].Email" class="form-control" placeholder="Enter here" />
                    </div>
                    <div class="form-group col-md-3 p-l-0">
                        <button type="button" id="studentDeleteBtn" class="btn btn-danger">Delete Row</button>
                    </div>
                </div>
                }
            </fieldset>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary col-md-6 p-l-0" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    var studentsCont = document.querySelector(".student-container");
    var studentDeleteBtn = document.querySelectorAll("#studentDeleteBtn");
    studentDeleteBtn.forEach(item => {
        item.addEventListener("click", function () {
            var btnParrent = this.parentNode.parentNode;
            studentsCont.removeChild(btnParrent);
        });
    })
</script>
