@model Scoring.ApplicationShared.DTOs.EventPerformerDto

@{
    ViewData["Title"] = "Details";
}

<h1>Performed Event Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PerformerTeam.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerformerTeam.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PerformDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerformDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SuccessfullyCompleted)
        </dt>
        <dd class="col-sm-10">
            @{
                var completedStatus = "No";
                if (Model.SuccessfullyCompleted)
                {
                    completedStatus = "Yes";
                }
            }
            @completedStatus
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventStorySource)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.EventStorySource">Link</a>
        </dd>
    </dl>
    <video width="520" height="440" controls>
        <source src="@Model.EventStorySource" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
