@model Scoring.ApplicationShared.DTOs.EventPerformerDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Performed Event Edit</h1>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="TeamId" class="control-label"></label>
                <input asp-for="TeamId" class="form-control" />
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="PerformDate" class="control-label"></label>
                <input asp-for="PerformDate" class="form-control" />
                <span asp-validation-for="PerformDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check d-none">
                <label class="form-check-label">
                    <input class="form-check-input" checked asp-for="SuccessfullyCompleted" /> @Html.DisplayNameFor(model => model.SuccessfullyCompleted)
                </label>
            </div>
            <div class="form-group">
                <p for="EventStorySource" class="control-label">Upload Event video</p>
                <br />
                @Html.TextBox("file", "", new { type = "file" }) 
                <br />
                <video width="520" height="440" controls>
                    <source src="@Model.EventStorySource" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary col-md-5" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
